<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>EduLab - Virtual Titration</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>
  <h1>EduLab: Virtual Titration Experiment</h1>
  <canvas id="titrationCanvas" width="600" height="400"></canvas>
  <p>Use the slider to simulate adding acid to the base solution.</p>
  <input type="range" id="dropSlider" min="0" max="100" step="1">
  <p id="resultText"></p>

  <script>
    const canvas = document.getElementById('titrationCanvas');
    const ctx = canvas.getContext('2d');
    const slider = document.getElementById('dropSlider');
    const resultText = document.getElementById('resultText');

    let dropsAdded = 0;

    slider.addEventListener('input', () => {
      dropsAdded = slider.value;
      drawExperiment(dropsAdded);
    });

    function drawExperiment(drops) {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      
      // Draw beaker outline
      ctx.strokeStyle = '#000';
      ctx.lineWidth = 2;
      ctx.strokeRect(250, 100, 100, 200);

      // Draw solution
      const solutionHeight = Math.min(drops * 2, 200);
      ctx.fillStyle = drops > 70 ? '#ff5c5c' : drops > 60 ? '#7fff7f' : '#a2d5f2';
      ctx.fillRect(250, 300 - solutionHeight, 100, solutionHeight);

      // Text feedback
      if (drops > 60 && drops <= 70) {
        resultText.textContent = "Perfect! The base is neutralized.";
      } else if (drops > 70) {
        resultText.textContent = "Too much acid! You've gone past neutralization.";
      } else {
        resultText.textContent = "Keep going... you're getting close.";
      }
    }

    // Initial draw
    drawExperiment(0);
  </script>
</body>
</html>

